{
	"extends": [
		"next/core-web-vitals"
	],
	"plugins": [
		"import",
		"n",
		"promise",
		"@typescript-eslint",
		"react",
		"@stylistic"
	],
	"rules": {
		"@typescript-eslint/strict-boolean-expressions": "error",
		"@stylistic/semi": [
			"error",
			"never"
		],
		"@stylistic/quotes": [
			"error",
			"single"
		],
		"@typescript-eslint/no-unused-vars": "warn",
		"no-tabs": "off",
		"@stylistic/indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"react/jsx-curly-brace-presence": [
			"error",
			{
				"props": "never",
				"children": "always"
			}
		]
	},
	"parserOptions": {
		"project": "./tsconfig.json"
	}
}
